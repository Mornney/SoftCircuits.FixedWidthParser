<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Authors>Jonathan Wood</Authors>
    <Company>SoftCircuits</Company>
    <Copyright>Copyright © 2020 SoftCircuits</Copyright>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
    <PackageTags>text text-parser file file-parser fixed width fixed-width</PackageTags>
    <PackageId>SoftCircuits.FixedWidthParser</PackageId>
    <Product>SoftCircuits.FixedWidthParser</Product>
    <Description>Lightweight .NET class for reading and writing fixed-width data files. Included basic reader and writer class, and also includes generic class that automatically map class properties to fixed-width fields. Many options included.</Description>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/SoftCircuits/FixedWidth</PackageProjectUrl>
    <PackageIcon>Logo_64x64.png</PackageIcon>
    <RepositoryUrl>https://github.com/SoftCircuits/FixedWidth</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\Logo_64x64.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
